@model List<WebUI.Models.DoseEventDto>

@{
    var cycle = ViewBag.Cycle as WebUI.Models.CycleDto;
    var pk = ViewBag.PkData as List<WebUI.Models.PkPointDto>;
}

<h2>@cycle!.Name</h2>

<p>
    <b>Start:</b> @cycle.StartDate.ToShortDateString() <br />
    <b>End:</b> @(cycle.EndDate?.ToShortDateString() ?? "Ongoing") <br />
    <b>Type:</b> @cycle.Type
</p>

<hr />

<h3>Dose Events</h3>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Date</th>
        <th>Compound</th>
        <th>Mg</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.Timestamp.ToShortDateString()</td>
            <td>@d.CompoundName</td>
            <td>@d.AmountMg</td>
        </tr>
    }
    </tbody>
</table>

<hr />

<h3>Blood Levels</h3>
<canvas id="pkChart" width="800" height="300"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const pkLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(pk.Select(p => p.Date.ToString("yyyy-MM-dd"))));
    const pkValues = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(pk.Select(p => p.TotalMg)));

    const ctx = document.getElementById('pkChart').getContext('2d');
    const pkChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: pkLabels,
            datasets: [{
                label: 'Total Active mg',
                data: pkValues,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.3
            }]
        }
    });
</script>